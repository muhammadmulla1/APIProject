# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /api     controllers.ApplicationController.index
GET     /route    controllers.ApplicationController.create
GET     /route/:id     controllers.ApplicationController.read(id: String)
GET     /route/:id     controllers.ApplicationController.update(id: String)
GET     /route/:id     controllers.ApplicationController.delete(id: String)

